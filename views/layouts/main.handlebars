        <input id='login-password' type='password'  class='custom-input'/>
        <label class="label-fix" for='login-password'>Password</label>
       </div>
      </div>
    </div>
     <div class="modal-footer">
          <button type="submit" class="cherry login-form waves-effect waves-green btn-flat custom-input">Submit</button>
      <a  id="login-submit" class="modal-close waves-effect waves-green btn-flat custom-input">Close</a>
     </div>
  </form>
</div>
      
