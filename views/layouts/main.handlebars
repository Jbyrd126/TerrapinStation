  <!-- Modal Structure -->
  <div id="modal1" class="modal signup-form ">
    <div class="modal-content">
      <h4 class="modal-text">Sign Up</h4>
      <div class='row' id="modal1">
  <form id='signup-form' class='col s12'>
    <div class='row'>
      <div class='input-field col s12'>
        <input id='name' type='text' class='validate custom-input' />
          <label for='name' class="label-fix"> Name</label>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
